generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
  output        = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_DB_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())

  rooms      RoomUser[]
  adminRooms CanvasRoom[] @relation("RoomAdmin")

  elements Element[]
}

model CanvasRoom {
  id   String @id @default(uuid())
  slug String @unique

  adminId String
  admin   User   @relation("RoomAdmin", fields: [adminId], references: [id])

  users    RoomUser[]
  elements Element[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Element {
  id String @id @default(cuid())

  roomId String
  room   CanvasRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)

  senderId String
  sender   User   @relation(fields: [senderId], references: [id], onDelete: Cascade)

  type ShapeTypes

  data Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RoomUser {
  userId String
  roomId String

  user User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  room CanvasRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)

  joinedAt DateTime @default(now())

  @@id([userId, roomId])
}

enum ShapeTypes {
  PENCIL
  RECTANGLE
  ELLIPSE
  LINE
  ARROW
  TEXT
}
