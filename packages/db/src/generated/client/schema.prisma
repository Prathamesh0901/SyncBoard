generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())

  rooms      CanvasRoom[] @relation("UserRooms")
  adminRooms CanvasRoom[] @relation("RoomAdmin")

  elements Element[]
}

model CanvasRoom {
  id   String @id @default(uuid())
  slug String @unique

  adminId String
  admin   User   @relation("RoomAdmin", fields: [adminId], references: [id])

  users User[] @relation("UserRooms")

  elements Element[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Element {
  id String @id @default(cuid())

  roomId String
  room   CanvasRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)

  senderId String
  sender   User   @relation(fields: [senderId], references: [id], onDelete: Cascade)

  type ShapeTypes

  data Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ShapeTypes {
  PENCIL
  RECTANGLE
  ELLIPSE
  LINE
  ARROW
  TEXT
}
